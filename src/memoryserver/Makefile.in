##
## File:  src/root/Makefile.in
##
## Description: Makefile for root
##

srcdir=		@srcdir@
top_srcdir=	@top_srcdir@
top_builddir=	@top_builddir@

include $(top_srcdir)/Mk/base.mk

PROGRAM=	memoryserver
PROGRAM_DEPS=	$(top_builddir)/lib/sdi/libsdi.a \
		$(top_builddir)/lib/malloc_small/libmalloc_small.a \
		$(top_srcdir)/include/$(ARCH)/sdi.ld

SRCS=		$(ARCH)-crt0.S \
		main.cc \
		memoryserver_idl.cc \
		memoryserver_impl.cc

IDLS=		memoryserver.idl

LIBS+=		-ll4 -lsdi -lio -lmalloc_small
LDFLAGS+=	-Ttext=01540000 -T $(top_builddir)/include/$(ARCH)/sdi.ld

include $(top_srcdir)/Mk/prog.mk
